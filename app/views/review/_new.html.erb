<%= form_tag(product_reviews_path(product_id), method: "post") do %>
  <%= label_tag :q, :Reveiw %>
  <%= text_field_tag :content %>
  <%= hidden_field_tag :product_id, product_id %>
  <%= submit_tag "Submit", class: "btn waves-effect waves-light", onclick: "return chk_confirm('confirm')" %>
<% end %>